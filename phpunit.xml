<?xml version="1.0" encoding="UTF-8"?>

<phpunit bootstrap="./autoload.php" colors="true">

    <testsuites>
        <testsuite name="Tests">
            <directory>./tests</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
          <directory suffix=".php">../</directory>
            <exclude>
              <directory>./tests</directory>
            </exclude>
        </whitelist>
    </filter>

</phpunit>
